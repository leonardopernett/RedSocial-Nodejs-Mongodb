<div class="card mb-4">
    <div class="card-header  d-flex justify-content-between align-items-center">
        <h5>{{images.title}}</h5>
        <button class="btn btn-danger" id="btn-delete" data-id="{{images.UniqueID}}">
            <i class="fa fa-times"> Delete</i>
        </button>
    </div>
    <div class="card-body">
        <p>{{images.description}}</p>
        <div class="text-center">
            <img src="/uploads/{{images.filename}}" alt="" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center ">
        <button class="btn btn-success" id="like" data-id="{{images.filename}}">
            <i class="fa fa-thumbs-up"> like</i>
        </button>
        <p>
            <span class="like-count">{{images.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>

            <i class="fas fa-eye"></i> {{images.views}}
        </p>
        <p><i class="far fa-clock"></i> {{timeago images.created_at}}</p>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            post a comment
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/image/{{images.UniqueID}}/comment" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="comment"></textarea>
                </div>
                <button type="submit" class="btn btn-success" i="btn-comment">
                    <i class="fa fa-comment"></i> send
                </button>
            </form>
        </blockquote>
        <ul class="list-group">
            {{#each comments}}
            <li class="list-group-item">
                <div class="row">
                    <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid" alt="" class="rounded">
                    <blockquote class="col">
                        <p>{{comment}}</p>
                        <footer class="blockquote-footer float-right">
                            {{name }} - {{timeago date}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>